{
  "name": "ganzneu",
  "version": "1.0.0",
  "description": ":warning: This is an alpha version. Although it is fully functional, it may stop working without notice. :warning:",
  "main": ".eslintrc.js",
  "directories": {
    "lib": "lib"
  },
  "targets": {
    "background": {
      "source": "src/background/background.js",
      "distDir": "dist/"
    },
    "popup": {
      "source": "src/popup/popup.html",
      "publicUrl": "."
    },
    "options": {
      "source": "src/options/options.html",
      "distDir": "dist/",
      "publicUrl": "/"
    },
    "displayjson": {
      "source": "src/options/displayJson.html",
      "distDir": "dist/",
      "publicUrl": "/"
    },
    "login": {
      "source": "src/login/login.html",
      "publicUrl": "."
    },
    "offscreen": {
      "source": "src/background/modules/offscreen/offscreen.html",
      "publicUrl": "."
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npx parcel watch",
    "build-js": "npx parcel build --no-optimize",
    "buildoptionscss": "npx tailwindcss build -i ./src/options/input.css -o ./src/options/options.css",
    "buildpopupcss": "npx tailwindcss build -i ./src/popup/css/input.css -o ./src/popup/css/popup.css",
    "build": "del-cli /src/options/options.css & del-cli /src/popup/css/popup.css & npx tailwindcss build -i ./src/options/input.css -o ./src/options/options.css --minify & npx tailwindcss build -i ./src/popup/css/input.css -o ./src/popup/css/popup.css --minify & npx parcel build ",
    "deploy": "del-cli /src/options/options.css & del-cli /src/popup/css/popup.css & npx tailwindcss build -i ./src/options/input.css -o ./src/options/options.css & npx tailwindcss build -i ./src/popup/css/input.css -o ./src/popup/css/popup.css & npx parcel build --no-source-maps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.11.0",
    "@parcel/transformer-webmanifest": "^2.11.0",
    "autoprefixer": "^10.4.15",
    "daisyui": "^4.6.2",
    "del-cli": "^5.1.0",
    "parcel": "^2.9.3",
    "parcel-reporter-static-files-copy": "^1.5.2",
    "postcss": "^8.4.29",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "@linthtml/linthtml": "^0.10.0-beta.5",
    "@yaireo/tagify": "^4.21.1",
    "http-status-codes": "^2.3.0",
    "idb": "^8.0.0",
    "json-markup": "^1.1.4",
    "linkedom": "^0.16.8",
    "readable-http-codes": "^1.1.1"
  }
}
