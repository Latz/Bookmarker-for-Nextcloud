{
  "name": "ganzneu",
  "version": "1.0.0",
  "type": "module",
  "description": ":warning: This is an alpha version. Although it is fully functional, it may stop working without notice. :warning:",
  "directories": {
    "lib": "lib"
  },
  "targets": {
    "background": {
      "source": "src/background/background.js",
      "distDir": "dist/"
    },
    "popup": {
      "source": "src/popup/popup.html",
      "publicUrl": "."
    },
    "options": {
      "source": "src/options/options.html",
      "distDir": "dist/",
      "publicUrl": "/"
    },
    "displayjson": {
      "source": "src/options/displayJson.html",
      "distDir": "dist/",
      "publicUrl": "/"
    },
    "login": {
      "source": "src/login/login.html",
      "publicUrl": "."
    },
    "offscreen": {
      "source": "src/background/modules/offscreen/offscreen.html",
      "publicUrl": "."
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "watch": "npx parcel watch",
    "copy-imgs": "npx cpy ./src/images/* ./dist/images/",
    "copy-locales": "npx cpy ./src/_locales/** ./dist/_locales/",
    "copy-manifest": "npx cpy ./manifest.json ./dist/",
    "copy": "npm run copy-imgs & npm run copy-locales & npm run copy-manifest",
    "build-js": "npx parcel build --no-optimize",
    "buildoptionscss": "del-cli /src/options/options.css & npx @tailwindcss/cli -i ./src/options/input.css -o ./src/options/options.css --minify",
    "buildpopupcss": "del-cli /src/popup/css/popup.css & npx @tailwindcss/cli -i ./src/popup/css/input.css -o ./src/popup/css/popup.css --minify",
    "build": "npm run copy & npm run buildoptionscss & npm run buildpopupcss & npx parcel build",
    "build-dev": "npm run copy & del-cli /src/options/options.css & npx @tailwindcss/cli -i ./src/options/input.css -o ./src/options/options.css & del-cli /src/popup/css/popup.css & npx @tailwindcss/cli -i ./src/popup/css/input.css -o ./src/popup/css/popup.css & npx parcel build --no-optimize",
    "deploy": "npm run copy & npm run buildoptionscss & npm run buildpopupcss & npx parcel build --no-source-maps"
  },
  "keywords": [
    "nextcloud",
    "bookmarks"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@linthtml/linthtml": "^0.10.2",
    "@parcel/config-webextension": "^2.16.3",
    "@parcel/packager-raw-url": "^2.16.3",
    "@parcel/transformer-webmanifest": "^2.16.3",
    "@tailwindcss/cli": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "daisyui": "^5.0.0",
    "del-cli": "^7.0.0",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^27.3.0",
    "parcel": "^2.16.3",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "postcss": "^8.4.29",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.0.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@yaireo/tagify": "^4.35.6",
    "cpy-cli": "^6.0.0",
    "http-status-codes": "^2.3.0",
    "idb": "^8.0.3",
    "json-markup": "^1.1.4",
    "linkedom": "^0.18.12",
    "readable-http-codes": "^1.1.1",
    "textfit": "^2.4.0"
  }
}
