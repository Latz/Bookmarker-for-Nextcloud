{
  "manifest_version": 3,
  "name": "Bookmarker for Nextcloud",
  "description": "Bookmarker for Nextcloud",
  "author": "plushbyte",
  "homepage_url": "https://plushbyte.com/chrome/bookmarker-for-nextcloud",
  "version": "0.30.2",
  "action": {
    "default_title": "Bookmarker for Nextcloud",
    "default_popup": "src/popup/popup.html"
  },
  "default_locale": "en",
  "icons": {
    "64": "images/icon-64x64-light.png",
    "128": "images/icon-128x128-light.png",
    "256": "images/icon-256x256-light.png",
    "512": "images/icon-512x512-light.png"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "options_page": "src/options/options.html",
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "scripting",
    "offscreen"
  ],
  "host_permissions": ["*://*/*"]
}
